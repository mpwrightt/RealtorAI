############################################################
# Convex Configuration
############################################################
# Run `npx convex dev` locally to populate these automatically,
# or copy them from the Convex dashboard: https://dashboard.convex.dev
NEXT_PUBLIC_CONVEX_URL=https://your-convex-url.convex.cloud
CONVEX_DEPLOYMENT=your-convex-deployment-id

############################################################
# Application Settings
############################################################
NEXT_PUBLIC_APP_URL=http://localhost:3000
ENCRYPTION_KEY=generate_a_64_char_hex_value

############################################################
# Clerk Authentication & Billing
############################################################
# Retrieve from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=YOUR_CLERK_PUBLISHABLE_KEY
CLERK_SECRET_KEY=YOUR_CLERK_SECRET_KEY
NEXT_PUBLIC_CLERK_FRONTEND_API_URL=https://your-clerk-frontend.clerk.accounts.dev
NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard
# NOTE: Set CLERK_WEBHOOK_SECRET inside the Convex dashboard, not here.

############################################################
# Stripe Payments (Phase 15)
############################################################
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET
# Optional override (defaults to Stripe SDK version)
STRIPE_API_VERSION=2023-10-16

############################################################
# Email Providers
############################################################
RESEND_API_KEY=YOUR_RESEND_API_KEY
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Neighborhood Deal Finder

############################################################
# SMS Providers (Twilio defaults)
############################################################
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15555555555

############################################################
# OpenRouter AI (Claude 3.5 Sonnet)
############################################################
OPENROUTER_API_KEY=YOUR_OPENROUTER_API_KEY
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_SITE_URL=http://localhost:3000
OPENROUTER_SITE_NAME=Neighborhood Deal Finder

############################################################
# Analytics / Telemetry
############################################################
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

############################################################
# Google AI Studio (Gemini) - For AI-powered listing creator
############################################################
GOOGLE_AI_STUDIO_API_KEY=your_google_ai_studio_key
GOOGLE_AI_MODEL=gemini-1.5-flash-latest
# Gemini 2.5 Flash Image - for image generation and enhancement
GOOGLE_IMAGE_MODEL=gemini-2.5-flash-image

############################################################
# External Data Providers (optional)
############################################################
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_token
RENTCAST_API_KEY=your_rentcast_api_key
RAPIDAPI_KEY=your_rapidapi_key
GOOGLE_PLACES_API_KEY=your_google_places_key
MLS_API_KEY=your_mls_api_key


